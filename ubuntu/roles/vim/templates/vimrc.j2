set nocompatible
scriptencoding utf-8
set fileencoding=utf-8
set encoding=utf-8
set termencoding=utf-8

set smartindent
set autoindent
set tabstop=4
set shiftwidth=4
set expandtab

" display
set showmatch
set wrap
set showmode
set showcmd
set ruler

if &compatible
  set nocompatible               " Be iMproved
endif

" Required:
set runtimepath+=/home/{{ dev_user }}/.cache//repos/github.com/Shougo/dein.vim

" Required:
if dein#load_state('/home/{{ dev_user }}/.cache/')
  call dein#begin('/home/{{ dev_user }}/.cache/')

  " Let dein manage dein
  " Required:
  call dein#add('/home/{{ dev_user }}/.cache//repos/github.com/Shougo/dein.vim')

  " Add or remove your plugins here:
  call dein#add('Shougo/neosnippet.vim')
  call dein#add('Shougo/neosnippet-snippets')
  call dein#add('fatih/vim-go')
  call dein#add('scrooloose/nerdtree')

  " You can specify revision/branch/tag.
  call dein#add('Shougo/vimshell', { 'rev': '3787e5' })

  " Required:
  call dein#end()
  call dein#save_state()
endif

" Required:
filetype plugin indent on
syntax enable

" If you want to install not installed plugins on startup.
if dein#check_install()
  call dein#install()
endif
